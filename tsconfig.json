{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6"],
    "target": "es2016",
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  }
}
